root = Tk()
root.title("Guess Who!")

topFrame=Frame(root,)
title=Label(topFrame,text="Guess Who!",font='Helvetica 22 bold',width="50",fg="brown",bg="yellow").pack()
topFrame.grid(row=0,column=0)

mainFrame=Frame(root,)
questionFrame=Frame(root,)
choiceFrame=Frame(root,)

mainFrame.grid(row=0,column=0)
questionFrame.grid(row=0,column=0)
choiceFrame.grid(row=0,column=0)
Alex = Button(mainFrame,image=Aleximage,command=Lambda:click("Alex"))
